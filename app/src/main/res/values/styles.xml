    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/school_dark_color</item>
        <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/Theme.MyAppTheme.ActionBar.Subtitle</item>
    </style>

    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/fg_color</item>
    </style>
    <style name="Theme.MyAppTheme.ActionBar.Subtitle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/fg_color</item>
    </style>

    <style name="yy_thumb_card_student_name">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/school_dark_color</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

