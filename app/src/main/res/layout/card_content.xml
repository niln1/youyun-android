<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="3dp"
    android:gravity="center_vertical"
    android:layout_height="50dp">

    <com.iyoucloud.yydroid.view.RoundedImageView
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:id="@+id/yy_thumb_card_profile_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentEnd="false"
        android:paddingRight="5dp" />

    <TextView
        android:id="@+id/yy_thumb_card_student_name"
        style="@style/yy_thumb_card_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="student name"
        android:layout_alignTop="@+id/yy_thumb_card_profile_image"
        android:layout_alignLeft="@+id/yy_thumb_card_pickup_loc"
        android:layout_alignStart="@+id/yy_thumb_card_pickup_loc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:layout_below="@+id/yy_thumb_card_student_name"
        android:layout_toLeftOf="@+id/yy_thumb_card_pickup_time"
        android:id="@+id/yy_thumb_card_pickup_loc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:id="@+id/yy_thumb_card_pickup_time"
        android:layout_alignTop="@+id/yy_thumb_card_pickup_loc"
        android:layout_toLeftOf="@+id/toggleButton_pickup"
        android:layout_toStartOf="@+id/toggleButton_pickup"
        android:layout_marginRight="64dp" />

    <ToggleButton
        android:layout_width="50dp"
        android:layout_height="38dp"
        android:id="@+id/toggleButton_pickup"
        android:checked="false"
        android:layout_marginRight="20dp"
        android:background="@color/school_dark_color"
        android:shadowColor="@color/fg_color"
        android:textOff="Pick"
        android:textOn="Unpick"
        android:layout_alignTop="@+id/yy_thumb_card_student_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>